{
  "env": {
    "browser": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "extends": ["airbnb", "next", "prettier"],
  "rules": {
    "react/jsx-props-no-spreading": 0,
    "react/function-component-definition": [2, { "namedComponents": "arrow-function" }]
  },
  "overrides": [
    {
      "files": "cypress/**",
      "extends": ["plugin:cypress/recommended"],
      "rules": {
        "node/no-unpublished-require": 0
      }
    }
  ]
}
